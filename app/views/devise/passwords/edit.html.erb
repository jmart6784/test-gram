<div id="change-password-container">

  <div id="change-password-inner-div">

    <div id="change-password-content-1">
      <%= image_tag "/assets/logo.png", id: "login-logo" %>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "change-password-form" }) do |f| %>

        <% if resource.errors.any? %>
          <div id="edit-user-error-explanation">

            <p id="edit-user-form-error-title">Can't create new password</p>

            <ul id="edit-user-error-ul">
              <% resource.errors.full_messages.each do |message| %>
                <li class="edit-user-error-message"><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= f.hidden_field :reset_password_token %>

        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New Password (#{@minimum_password_length} characters minimum)", class: "change-password-password-field" %>

        <%= f.password_field :password_confirmation, placeholder: "Confirm New Password", autocomplete: "new-password", class: "change-password-password-field" %>

        <%= f.submit "Change my password", id: "change-password-submit" %>
      <% end %>
    </div>

    <div id="change-password-content-2">
      <%= link_to "Log in", new_session_path(resource_name), class: "change-password-links" %>

      <%= link_to "Sign up", new_registration_path(resource_name), class: "change-password-links" %>
    </div>

  </div>

</div>


