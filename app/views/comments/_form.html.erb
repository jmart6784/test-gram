<%= form_for [ @post, @comment ], html: {remote: true, id: "comment-form"} do |f| %>
  <%= f.text_field :body, placeholder: "Add a comment...", id: "comment-text-field", required: true, maxlength: 2200 %><br>

  <%= f.hidden_field :html_text_id, value: "comment-text-field" %>
  <%= f.hidden_field :parent_div_id, value: "parent-comments-div" %>

  <%= f.submit "Post", id: "comment-submit" %>
<% end %>